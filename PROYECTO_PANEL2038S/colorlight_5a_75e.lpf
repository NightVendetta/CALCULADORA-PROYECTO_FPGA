# ============================================================================
# Colorlight 5A-75E V8.2 - LED Matrix Constraints
# Para ICN2038S Controller Test
# ============================================================================

BLOCK RESETPATHS;
BLOCK ASYNCPATHS;

# Clock principal (25 MHz)
LOCATE COMP    "clk" SITE "P6";
IOBUF PORT     "clk" IO_TYPE=LVCMOS33;
FREQUENCY PORT "clk" 25.0 MHz;

# Reset externo (con pull-up) - COMENTADO temporalmente
# Si necesitas el reset externo, descomenta estas l√≠neas
# LOCATE COMP    "rst" SITE "R7";
# IOBUF PORT     "rst" PULLMODE=UP IO_TYPE=LVCMOS33 DRIVE=4;

# Clock para LED panel
LOCATE COMP    "LP_CLK" SITE "M3";
IOBUF PORT     "LP_CLK" IO_TYPE=LVCMOS33 DRIVE=8;

# Latch Enable (LE en el ICN2038S)
LOCATE COMP    "LATCH" SITE "N1";
IOBUF PORT     "LATCH" IO_TYPE=LVCMOS33 DRIVE=8;

# Output Enable (activo bajo)
LOCATE COMP    "NOE" SITE "M4";
IOBUF PORT     "NOE" IO_TYPE=LVCMOS33 DRIVE=8;

# Row Address (A, B, C, D, E) - 5 bits para scan 1/32
LOCATE COMP    "ROW[0]" SITE "N5";
IOBUF PORT     "ROW[0]" IO_TYPE=LVCMOS33 DRIVE=8;
LOCATE COMP    "ROW[1]" SITE "N3";
IOBUF PORT     "ROW[1]" IO_TYPE=LVCMOS33 DRIVE=8;
LOCATE COMP    "ROW[2]" SITE "P3";
IOBUF PORT     "ROW[2]" IO_TYPE=LVCMOS33 DRIVE=8;
LOCATE COMP    "ROW[3]" SITE "P4";
IOBUF PORT     "ROW[3]" IO_TYPE=LVCMOS33 DRIVE=8;
LOCATE COMP    "ROW[4]" SITE "N4";
IOBUF PORT     "ROW[4]" IO_TYPE=LVCMOS33 DRIVE=8;

# RGB Data - Panel Superior (Upper half)
LOCATE COMP    "RGB0[0]" SITE "J13";  # R0 - Red
IOBUF PORT     "RGB0[0]" IO_TYPE=LVCMOS33 DRIVE=8;
LOCATE COMP    "RGB0[1]" SITE "K13";  # G0 - Green
IOBUF PORT     "RGB0[1]" IO_TYPE=LVCMOS33 DRIVE=8;
LOCATE COMP    "RGB0[2]" SITE "J12";  # B0 - Blue
IOBUF PORT     "RGB0[2]" IO_TYPE=LVCMOS33 DRIVE=8;

# RGB Data - Panel Inferior (Lower half)
LOCATE COMP    "RGB1[0]" SITE "H13";  # R1 - Red
IOBUF PORT     "RGB1[0]" IO_TYPE=LVCMOS33 DRIVE=8;
LOCATE COMP    "RGB1[1]" SITE "H12";  # G1 - Green
IOBUF PORT     "RGB1[1]" IO_TYPE=LVCMOS33 DRIVE=8;
LOCATE COMP    "RGB1[2]" SITE "G12";  # B1 - Blue
IOBUF PORT     "RGB1[2]" IO_TYPE=LVCMOS33 DRIVE=8;